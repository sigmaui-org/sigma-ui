{
  "name": "@sigmaui-labs/storybook",
  "version": "0.0.1",
  "description": "The SigmaUI storybook setup for react UI Kit.",
  "keywords": [
    "storybook"
  ],
  "author": "Nicholas Novak (Aka) Webnerdie <its.nicholas.novak@gmail.com>",
  "homepage": "https://sigma-ui.com",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": true,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sigmaui-labs/sigma-ui.git",
    "directory": "packages/storybook"
  },
  "bugs": {
    "url": "https://github.com/sigmaui-labs/sigma-ui/issues"
  },
  "scripts": {
    "clean": "rm -rf node_modules/.cache/storybook",
    "dev": "pnpm storybook dev -p 6006",
    "build": "pnpm storybook build",
    "start": "pnpm dlx http-server storybook-static"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1.9.0",
    "@storybook/addon-a11y": "^8.3.5",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-themes": "^8.3.5",
    "@storybook/blocks": "8.3.5",
    "@storybook/cli": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/theming": "^8.3.5",
    "storybook": "^8.3.5",
    "storybook-dark-mode": "^4.0.2"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
